<%
const cfg = {...require("./data.json"), ...arguments?.[0]}
const {
    activeElement
} = cfg
%>
<%
const classes = `header`.trim()
const links = [
    {
        text: "Главная",
        href: "./index.html"
    },
    {
        text: "Прайс",
        href: "./price.html"
    },
    {
        text: "Врачи",
        href: "./specialists.html"
    },
    {
        text: "Отзывы",
        href: "./feedback.html"
    },
    {
        text: "Наши работы",
        href: "./works.html"
    }
]
%>

<header>
    <div class="container">
        <div class="<%= classes %>">
            <div class="header__logo">
                <img src="./images/logo.svg" alt="" class="logo">
            </div>
            <div class="header__nav">
                <nav class="header-nav">
                    <ul class="header-nav__list">
                        <% links.forEach((item, i)=>{ %>
                            <li class="header-nav__item">
                                <a href="<%- item.href %>"
                                   class="header-nav__link <% if (activeElement === i) { %> is-active <% } %>">
                                    <%-item.text%>
                                </a>
                            </li>
                        <% }) %>
                    </ul>
                </nav>
            </div>
            <div class="header__phone">
                <div class="phone">
                    <a href="tel:+78888888888" class="phone__link">+78888888888</a>
                    <%- require("../button/template.ejs")({
                        label: "Заказать звонок"
                    }) %>
                </div>
            </div>
        </div>
    </div>

</header>
