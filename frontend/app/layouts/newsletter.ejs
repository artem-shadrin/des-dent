<section class="section newsletter">
  <div class="container">
    <div class="newsletter__content">
      <h2 class="h2 title newsletter__title">Записаться на консультацию </h2>
      <span class="newsletter__legend">Lorem ipsum dolor sit amet, consectetur adipisicing elit.</span>
      <div class="newsletter__form">
        <form action="/" class="form-newsletter" data-js-form novalidate>
          <div class="form-newsletter__email">
            <%- require("../components/input/template.ejs")({
              extraClasses: ["input--underlined"],
              extraAttrs: [`data-js-input-validate="email"`],
              label: "Телефон для связи",
              name: "phone",
              id: "form-newsletter__email",
              mask: "phone"
            }) %>
          </div>
          <div class="form-newsletter__privacy">
            <%- require("../components/checkbox/template.ejs")({
              extraClasses: ["checkbox--transparent"],
              label: 'Я соглашаюсь с <a href=“/” target=“_blank”>соглашением о персональных данных</a>',
               name: "privacy",
               id: "form-newsletter__privacy"
            }) %>
          </div>
          <div class="form-newsletter__submit">
            <%- require("../components/button/template.ejs")({
              extraClasses: ["button--transparent"],
              label: "Записаться",
              icon: "icon-arrow-2",
              iconPosition: "left"
            }) %>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>