.feedback {
    background-color: var(--c-main);

    &__title {
        color: var(--c-light);
    }

    &__content {
        display: flex;
        justify-content: space-between;
        gap: 50px;
    }

    &__slider {
        flex: 1 1 360px;
        max-width: 640px;
    }

    &__info {
        margin-top: 40px;
        color: var(--c-light);
    }

    &__more {
        .button {
            --textColor: var(--c-light-2);
            --iconColor: var(--c-light-2);
            --hoverTextColor: var(--c-accent);
            --hoverIconColor: var(--c-accent);

        }
    }
}